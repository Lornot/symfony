{% extends 'IdeasBundle::base.html.twig' %}

{% block title %}Add new idea{% endblock %}
{% form_theme form 'IdeasBundle::forms/form_label.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form.js') }}"></script>
{% endblock %}

{% block body %}

    {{ form_start(form) }}

        <h1>Form errors: {{ form_errors(form) }}</h1>

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.attractiveness) }}

        <div class="form-group">
        <h1>Keywords errors: {{ form_errors(form.keywords) }}</h1>

        {{ form_label(form.keywords)}}

            <ul class="keywords" data-prototype="{{ form_widget(form.keywords.vars.prototype)|e('html_attr') }}">
            </ul>
        </div>

        {{ form_row(form.created_at) }}
        {{ form_row(form.image) }}

        {{ form_row(form._token) }}
        {{ form_row(form.save) }}

    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}