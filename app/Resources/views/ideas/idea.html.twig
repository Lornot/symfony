{% extends 'base.html.twig' %}

{% block title %}
    {{ idea_title }}
{% endblock %}

{% block body %}
    <h1>{{ idea_title }}</h1>
    <p>{{ idea_description }}</p>
    <p>{{ idea_created_at }}</p>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('ideas_update', {'idea_id' : idea_id }) }}">Update</a>
        <a href="{{ path('ideas_remove', {'idea_id' : idea_id }) }}">Remove</a>
    {% endif %}
{% endblock %}